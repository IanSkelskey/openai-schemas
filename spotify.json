{
  "openapi": "3.0.0",
  "info": {
    "title": "Spotify API",
    "description": "A simple API to get information about a Spotify user",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.spotify.com/v1",
      "description": "Spotify API"
    }
  ],
  "paths": {
    "/playlists/{playlist_id}": {
      "get": {
        "operationId": "getPlaylist",
        "summary": "Get a playlist",
        "parameters": [
          {
            "name": "playlist_id",
            "in": "path",
            "required": true,
            "description": "The playlist ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The playlist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "collaborative": {
                      "type": "boolean"
                    },
                    "description": {
                      "type": "string"
                    },
                    "external_urls": {
                      "type": "object",
                      "properties": {
                        "spotify": {
                          "type": "string"
                        }
                      }
                    },
                    "followers": {
                      "type": "object",
                      "properties": {
                        "href": {
                          "type": "string"
                        },
                        "total": {
                          "type": "integer"
                        }
                      }
                    },
                    "href": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "images": {
                      "type": "array",
                      "items": {
                        "url": {
                          "type": "string"
                        },
                        "height": {
                          "type": "integer"
                        },
                        "width": {
                          "type": "integer"
                        }
                      }
                    },
                    "name": {
                      "type": "string"
                    },
                    "owner": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "display_name": {
                          "type": "string"
                        }
                      },
                      "404": {
                        "description": "Playlist not found"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}