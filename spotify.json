        "operationId": "getPlaylist",
        "summary": "Get a playlist",
        "parameters": [
          {
            "name": "playlist_id",
            "in": "path",
            "required": true,
            "description": "The playlist ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "fields",
            "in": "query",
